
@{
    ViewBag.Title = "EditProductMenu";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}


@using MvcExamTaskMitRao.Models
@model ProductMenuItem

<h2>EditProductMenu</h2>


@using (Html.BeginForm("UpdateOrderItem", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(x => x.id)
    @Html.LabelFor(x => x.itemname, "Item Name", new { @class = "form-label d-block" })
    @Html.TextBoxFor(x => x.itemname, "", new { @class = "form-control", @type = "text", @value = Model.itemname })
    @Html.ValidationMessageFor(x => x.itemdesc, "", new { @class = "text-danger" })

    @Html.LabelFor(x => x.itemdesc, "Item Description", new { @class = "form-label d-block" })
    @Html.TextBoxFor(x => x.itemdesc, "", new { @class = "form-control", @type = "text", @value = Model.itemdesc })
    @Html.ValidationMessageFor(x => x.itemdesc, "", new { @class = "text-danger" })

    <button type="submit" class="btn btn-small btn-success mt-4 d-block">Update Item</button>

}

